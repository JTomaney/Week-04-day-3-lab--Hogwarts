<form action="/students/<%= @student.id %>" method="post">
<label for="first-name">First name</label>
<input type="text" name="first_name" id="first-name" value="<%= @student.first_name %>">
<label for="last-name">Last name</label>
<input type="text" name="last_name" id="last-name" value="<%= @student.last_name %>">
<label for="age">Age</label>
<input type="number" name="age" id="age" min="11" value="<%= @student.age %>">
<label for="house_select">Select House:</label>
<select name="house_id" id="house_select">
  <option value="<%=@student.house_id.to_i%>" <%= "selected" if @student.house.name.capitalize == "Gryffindor" %>>Gryffindor</option>
  <option value="<%=@student.house_id.to_i%>" <%= "selected" if @student.house.name.capitalize == "Hufflepuff" %>>Hufflepuff</option>
  <option value= "<%=@student.house_id.to_i%>"  <%= "selected" if @student.house.name.capitalize == "Ravenclaw" %>>Ravenclaw</option>
  <option value="<%= @student.house_id.to_i %>"<%= "selected" if @student.house.name.capitalize == "Slytherin" %>>Slytherin</option>
</select>
<input type="submit" value="Update">
</form>
